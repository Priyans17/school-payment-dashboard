{
  "name": "school-payment-dashboard",
  "version": "1.0.0",
  "description": "Complete school payment management system",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "backend": "cd backend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "start:all": "concurrently \"npm run backend:dev\" \"npm run dev\"",
    "install:all": "npm install && cd backend && npm install",
    "setup": "npm run install:all && echo 'Setup complete! Run npm run start:all to start both servers'"
  },
